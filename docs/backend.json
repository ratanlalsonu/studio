
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a regular customer user in the system.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID from Firebase Auth." },
        "fullName": { "type": "string", "description": "The user's full name." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "role": { "type": "string", "enum": ["user", "seller"], "description": "The role of the user." },
        "createdAt": { "type": "string", "format": "date-time", "description": "The timestamp when the user was created." }
      },
      "required": ["uid", "fullName", "email", "role", "createdAt"]
    },
    "SellerProfile": {
      "title": "Seller Profile",
      "description": "Represents a seller user in the system, extending the base user profile.",
      "type": "object",
      "properties": {
         "uid": { "type": "string", "description": "The user's unique ID from Firebase Auth." },
        "fullName": { "type": "string", "description": "The seller's full name or business name." },
        "email": { "type": "string", "format": "email", "description": "The seller's contact email address." },
        "role": { "type": "string", "enum": ["seller"], "description": "The role, which is always 'seller'." },
        "phone": { "type": "string", "description": "The seller's contact phone number." },
        "createdAt": { "type": "string", "format": "date-time", "description": "The timestamp when the seller account was created." }
      },
      "required": ["uid", "fullName", "email", "role", "phone", "createdAt"]
    },
     "Product": {
      "title": "Product",
      "description": "Represents a product listed on the platform, added by an admin.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "pricePerUnit": { "type": "number" },
        "units": { "type": "array", "items": { "type": "string", "enum": ["litre", "ml", "kg", "g"] } },
        "defaultUnit": { "type": "string", "enum": ["litre", "ml", "kg", "g"] },
        "image": { "type": "string", "format": "uri" },
        "category": { "type": "string" }
      },
      "required": ["name", "pricePerUnit", "units", "defaultUnit", "image", "category"]
    },
    "SellerProduct": {
      "title": "Seller Product",
      "description": "Represents a product listed by a seller.",
      "type": "object",
      "properties": {
        "sellerId": { "type": "string", "description": "The UID of the seller who owns this product." },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "pricePerUnit": { "type": "number" },
        "units": { "type": "array", "items": { "type": "string", "enum": ["litre", "ml", "kg", "g"] } },
        "defaultUnit": { "type": "string", "enum": ["litre", "ml", "kg", "g"] },
        "image": { "type": "string", "format": "uri" },
        "category": { "type": "string" }
      },
      "required": ["sellerId", "name", "pricePerUnit", "units", "defaultUnit", "image", "category"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profile information for regular users."
    },
    "/sellers/{sellerId}": {
      "schema": { "$ref": "#/entities/SellerProfile" },
      "description": "Stores public profile information for sellers."
    },
     "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores products added by platform admins."
    },
    "/sellerProducts/{productId}": {
      "schema": { "$ref": "#/entities/SellerProduct" },
      "description": "Stores products added by individual sellers."
    }
  }
}
